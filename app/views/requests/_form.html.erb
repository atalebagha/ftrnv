<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :type %><br>
    <%= f.select :type_id, Type.all.collect {|x| [x.name, x.id]}, {:include_blank => 'Select a type'}, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :contract_id %><br>
    <%=  %>
  </div>
  <div class="form-group">
    <%= f.label 'Start Date' %><br>
    <%= f.date_select :start, :selected => Date.today + 14, class: "input-append date datepicker" %>
  </div>
  <div class="form-group">
    <%= f.label 'Number of Days' %><br>
    <%= @request.days %>
  </div>
  <div class="form-group">
    <%= f.label 'Vacation Days Used' %><br>
    <%= f.select :vacationdays, 1..30, {:include_blank => 'Select number of days'}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Exit/Re-Entry Days Used' %><br>
    <%= f.select :exitdays, 1..5, {:include_blank => 'Select number of days'}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Misc. Days Used' %><br>
    <%= f.select :otherdays, 1..20, {:include_blank => 'Select number of days'}, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.submit class: "btn btn-primary"%>
  </div>

<% end %>
