<div class="col-sm-9">
<h1>Listing Requests</h1>

<table class="table">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Type</th>
      <th>Contract</th>
      <th>Start</th>
      <th>Days</th>
      <th>Vacationdays</th>
      <th>Exitdays</th>
      <th>Otherdays</th>
      <th>Actualreturn</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.user.first_name %></td>
        <td><%= request.type.name %></td>
        <td><%= request.contract_id %></td>
        <td><%= request.start %></td>
        <td><%= request.days %></td>
        <td><%= request.vacationdays %></td>
        <td><%= request.exitdays %></td>
        <td><%= request.otherdays %></td>
        <td><%= request.actualreturn %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path, class: "btn btn-default" %>
</div>
